---
// Supports weights 100-900
import "@fontsource-variable/noto-sans";

import "../styles/global.css";
import BackgroundImage from "../assets/images/pattern_01_transparent.png";

import Navigation from "../components/Navigation.astro";

const { title, description, noindex = false } = Astro.props;

interface Props {
  title: string;
  description: string;
  noindex?: boolean;
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    {noindex && <meta name="robots" content="noindex" />}

    <meta name="description" content={description} />

    <meta property="og:site_name" content="Austijos Lietuvių bendruomenė" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:locale " content="lt" />
    <meta property="og:type" content="website" />
  </head>
  <body>
    <div
      class="min-h-screen bg-fit bg-no-repeat"
      style={`background-image: url(${BackgroundImage.src});`}
    >
      <main class="relative flex flex-col z-10 h-full min-h-screen">
        <!-- <Navigation /> -->
        <slot />
      </main>
    </div>
  </body>
</html>
